border-1px($color)
  position: relative
  &:after
    position: absolute
    width: 100%
    left: 0
    bottom: 0
    border-top: 1px solid $color
    content: ' '

border-no()
  &:after
    display: none

bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-deveice-pixel-ratio: 3),(min-deveice-pixel-ratio: 3)
    background-image: url($url + "@3x.png")

